            <div class="debater-view hide">
                <div class="live-box">
                    <div class="live-box-content">
                        <ol class="breadcrumb debater-switch fl hide">
                            <li class="active">一辩</li>
                            <li>二辩</li>
                            <li>三辩</li>
                        </ol>
                        <div class="opponent-info">
                            <div class="single-opponent-info"></div>
                            <div id="live-count-down" class="count-down fr">倒计时：--</div>
                        </div>
                        <div class="live-box-line line"></div>
                        <div class="live-content"></div>
                        <div class="live-content-free hide"></div>
                        <div class="live-content-free hide"></div>
                        <div class="live-content-free hide"></div>
                        <!-- <p class="word-count fr">字数：220／250</p> -->
                    </div>
                </div>
                <div class="edit-box">
                    <div class="edit-box-content">
                        <p class="descript">编辑你的发言</p>
                        <div id="edit-count-down" class="count-down fr">倒计时：--</div>
                        <div class="edit-box-line line"></div>
                    </div>
                    <div class="type-button">
                        <input type="button" value="总结" class="conclude-button">
                        <input type="button" value="分点" class="point-button">
                        <input type="button" value="例子" class="example-button">
                        <input type="button" value="反驳" class="argue-button">
                        <div class="button-hink fb"></div>
                        <div class="edit-button-line line"></div>
                    </div>
                    <div id="editcon" class="edit-content">
                    </div>
                    <input type="button" value="发表" class="edit-publish-button fr">
                    <!-- <p class="word-count">字数：220／250</p> -->
                </div>
            </div>

            <div class="audience-view hide">
                <div class="vote-box">
                    <h3>你的选择</h3>
                    <div class="line choice-line"></div>
                    <div class="audience-choice">
                        <div class="blue-choice vote">
                            <input type="image" src="images/choice-button.png" id="blue-choice-button">
                            <span class="fl">正方</span>
                        </div>  
                        <div class="orange-choice vote">
                            <input type="image" src="images/choice-button.png" id="orange-choice-button">
                            <span class="fl">反方</span>
                        </div>
                    </div>
                <div>
                <div class="player-box">
                    <h3>辩手</h3>
                    <div class="line choice-line"></div>
                    <div class="blue-debater">
                        <h4 class="blue fl">正方</h4>
                        <ul>
                            <li>
                                <div class="debater-avatar fl">
                                    <div class="debater-avatar-blank">
                                        <img src="images/avatar1.png" alt="">
                                    </div>
                                </div>
                                <div class="dot bkorange fl"></div>
                                <div class="debater-intro">
                                    <div class="debater-name">成长的樱桃树</div>
                                </div>
                            </li>
                            <li>
                                <div class="debater-avatar fl">
                                    <div class="debater-avatar-blank">
                                        <img src="images/avatar3.png" alt="">
                                    </div>
                                </div>
                                <div class="dot bkorange fl"></div>
                                <div class="debater-intro">
                                    <div class="debater-name">吹灭酒精灯</div>
                                </div>
                            </li>
                            <li>
                                <div class="debater-avatar fl">
                                    <div class="debater-avatar-blank">
                                        <img src="images/avatar5.png" alt="">
                                    </div>
                                </div>
                                <div class="dot bkorange fl"></div>
                                <div class="debater-intro">
                                    <div class="debater-name">苦涩的核桃衣</div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="orange-debater">
                        <h4 class="orange fl">反方</h4>
                        <ul>
                            <li>
                                <div class="debater-avatar fl">
                                    <div class="debater-avatar-blank">
                                        <img src="images/avatar2.png" alt="">
